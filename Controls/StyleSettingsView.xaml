<UserControl
    x:Class="Starter.Controls.StyleSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="16" Orientation="Vertical">

        <!--  高斯模糊  -->
        <CheckBox Content="开启高斯模糊（系统）" IsChecked="{Binding Blur}" />

        <TextBlock
            Margin="0,4,0,8"
            Foreground="OrangeRed"
            Text="高斯模糊关闭后需重启生效"
            Visibility="{Binding NeedRestartHint, Converter={StaticResource BoolToVisibility}}" />

        <!--  模式  -->
        <TextBlock Text="背景模式" />
        <ComboBox
            IsEnabled="{Binding IsNormalStyleEnabled}"
            SelectedValue="{Binding Mode, Mode=TwoWay}"
            SelectedValuePath="Content">
            <ComboBoxItem Content="Color" />
            <ComboBoxItem Content="Image" />
        </ComboBox>


        <!--  颜色  -->
        <TextBlock Text="背景颜色" />
        <TextBox IsEnabled="{Binding IsNormalStyleEnabled}" Text="{Binding Color}" />

        <!--  图片  -->
        <TextBlock Text="背景图片" />
        <TextBox IsEnabled="{Binding IsImageMode}" Text="{Binding ImagePath, Mode=TwoWay}" />
        <Button
            Width="50"
            Height="20"
            Command="{Binding SelectImgCmd}">
            选择文件
        </Button>

        <!--  透明度  -->
        <TextBlock Text="透明度" />
        <Slider
            IsEnabled="{Binding IsNormalStyleEnabled}"
            Maximum="1"
            Minimum="0.1"
            Value="{Binding Opacity}" />

        <!--  圆角  -->
        <TextBlock Text="圆角半径" />
        <Slider
            IsEnabled="{Binding IsNormalStyleEnabled}"
            Maximum="40"
            Minimum="0"
            Value="{Binding CornerRadius}" />
    </StackPanel>
</UserControl>
