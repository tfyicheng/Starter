<Window x:Class="Starter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Starter"
        mc:Ignorable="d"
        Title="Starter" Height="600" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        MinWidth="400" MinHeight="300">

    <Window.Resources>
        <local:StringToBrushConverter x:Key="StringToBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:PathToIconConverter x:Key="PathToIconConverter"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsLocked" Converter="{StaticResource BooleanToVisibilityConverter}"/>
    </Window.Visibility>

    <!-- 主容器 -->
    <Border Name="MainBorder"
            CornerRadius="12"
            Background="#CC1E1E1E">

        <Border.Effect>
            <BlurEffect Radius="20"/>
        </Border.Effect>

        <Grid Margin="0">
            <!-- 顶部标题栏 -->
            <Border Height="40" Background="#00000000" 
                    VerticalAlignment="Top" Cursor="Hand"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    MouseLeftButtonUp="TitleBar_MouseLeftButtonUp">

                <Grid Margin="10,0">
                    <!-- 左侧 -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Starter" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 右侧按钮 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Width="30" Height="30" Background="Transparent" BorderThickness="0" 
                                Cursor="Hand" Command="{Binding LockCommand}" Content="🔓"/>
                        <Button Width="30" Height="30" Margin="5,0,0,0" Background="Transparent" 
                                BorderThickness="0" Cursor="Hand" Command="{Binding CloseCommand}" Content="✕"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tab栏 -->
            <ScrollViewer Margin="0,45,0,0" Height="40" VerticalScrollBarVisibility="Hidden" 
                          HorizontalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding MenuGroups}" Margin="10,0" VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent" CornerRadius="8" Padding="15,8" 
                                    Margin="2,0" Cursor="Hand" 
                                    MouseLeftButtonUp="TabItem_MouseLeftButtonUp">
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="14" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- 添加按钮 -->
            <!-- 添加按钮（用Border实现圆角） -->
            <Border Width="40" Height="40" Margin="0,45,10,0" 
        HorizontalAlignment="Right" VerticalAlignment="Top"
        Background="#33FFFFFF" CornerRadius="20"
        Cursor="Hand">
                <Button Width="40" Height="40" Background="Transparent" BorderThickness="0"
            Command="{Binding AddGroupCommand}" Content="+" FontSize="20" Foreground="White"/>
            </Border>

            <!-- 内容区域 -->
            <Grid Margin="10,90,10,10">
                <ItemsControl ItemsSource="{Binding SelectedGroup.Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" 
                                       VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="80" Height="90" Margin="5" Background="#4DFFFFFF" 
                                    CornerRadius="8" Cursor="Hand">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                                            Margin="0,10,0,0">
                                    <Image Width="32" Height="32" 
                                           Source="{Binding IconPath, Converter={StaticResource PathToIconConverter}}"/>
                                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" 
                                               TextAlignment="Center" MaxWidth="70" Margin="5,5,5,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</Window>