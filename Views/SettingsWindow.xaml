<Window
    x:Class="Starter.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:Starter.Controls"
    xmlns:vm="clr-namespace:Starter.ViewModels"
    Title="Settings"
    Width="720"
    Height="520"
    WindowStartupLocation="CenterOwner">
    <!--<Window.DataContext>
        <vm:SettingsViewModel />
    </Window.DataContext>-->
    <Window.Resources>

        <DataTemplate DataType="{x:Type vm:GeneralSettingsViewModel}">
            <views:GeneralSettingsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:StyleSettingsViewModel}">
            <views:StyleSettingsView />
        </DataTemplate>

    </Window.Resources>
    <Grid>

        <!--<Border Name="MainBorder" CornerRadius="12" Background="#CC1E1E1E">
            <Border.Effect>
                <BlurEffect Radius="20"/>
            </Border.Effect>
            <Grid Margin="1">
        -->
        <!--  加1px margin避免模糊被裁剪  -->
        <!--  你的内容  -->
        <!--
            </Grid>
        </Border>-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  左侧分类  -->
        <ListBox
            x:Name="CategoryList"
            SelectedIndex="0"
            SelectionChanged="CategoryList_SelectionChanged">
            <ListBoxItem Content="通用" />
            <ListBoxItem Content="样式" />
        </ListBox>

        <!--  右侧内容  -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" />
    </Grid>
</Window>
